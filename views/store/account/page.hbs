

<section class="img1 grid gap-4 justify-center items-center my-2 p-4">
        <div class="w-full max-w-xs">
          <form action="/auth/login" method="post" class="bg-gray-300 text-2xl shadow-md rounded px-8 pt-6 pb-8 mb-4">
              <div class="mb-4">
                  <label class="block text-gray-700 text-xl font-bold mb-2" for="name">
                    Username 
                   </label>
                 <input name="username" class="box-border border-2 border-black rounded w-full py-2 px-3 text-black bg-transparent" type="text" placeholder="Username">
               </div>

              <div class="mb-4">
                <label class="block text-gray-700 text-xl font-bold mb-2" for="password">
                    Password
                </label>
                  <input name="password" class="box-border border-2 border-black rounded w-full py-2 px-3 text-black bg-transparent" type="password" placeholder="*****">
              </div>

                <input class="border-2 border-white bg-black text-white my-2 p-2 rounded" type="submit" value="Login">
                 <a class="inline-block align-baseline font-bold text-sm text-black hover:text-blue-800" href="/createacc">
                   Create an account
                 </a>
            </form>
            
            {{#if message }}
                <div>
                    <p class="text-2xl text-white font-bold tracking-widest text-center my-2">
                        {{ message }}
                    </p>
                </div>
            {{/if}}
      
        </div>

       
               

</section>